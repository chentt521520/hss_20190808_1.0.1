<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <!--售后item-->

    <!--图片-->
    <ImageView
        android:id="@+id/item_aftersale_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/big_image01"
        android:scaleType="fitCenter"
        android:layout_gravity="center" />

    <!--数据-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <!--名称，规格-->
        <TextView
            android:id="@+id/item_aftersale_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="测试"
            android:textSize="12sp"
            android:textColor="@color/blackColor0f" />

        <!--申请操作-->
        <TextView
            android:id="@+id/item_aftersale_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请售后"
            android:textSize="10sp"
            android:textColor="@color/baseRedColor"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/bk_red_01"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <!--说明-->
        <TextView
            android:id="@+id/item_aftersale_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_aftersale_operate"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:text="我是说明"
            android:textSize="10sp"
            android:textColor="@color/baseRedColor"
            android:visibility="invisible" />

        <!--数量-->
        <TextView
            android:id="@+id/item_aftersale_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_aftersale_explain"
            android:layout_marginBottom="10dp"
            android:text="数量：1"
            android:textSize="10sp"
            android:textColor="@color/huiColor6665" />
    </RelativeLayout>
</LinearLayout>
