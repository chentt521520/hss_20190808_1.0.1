<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteColor">
    <!--售后服务详情界面-->

    <!--处理结果-->
    <TextView
        android:id="@+id/aftersaledetailsactivity_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="27dp"
        android:text="退款成功"
        android:textSize="14sp"
        android:textColor="@color/whiteColor"
        android:background="@color/baseRedColor" />

    <!--处理时间-->
    <TextView
        android:id="@+id/aftersaledetailsactivity_disposetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="27dp"
        android:text="2017年09月32日 25:61:01"
        android:textSize="12sp"
        android:textColor="@color/whiteColor"
        android:background="@color/baseRedColor" />

    <!--退款总金额-->
    <LinearLayout
        android:id="@+id/aftersaledetailsactivity_moneylinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款总金额"
            android:textSize="12sp"
            android:textColor="@color/blackColor0f" />

        <TextView
            android:id="@+id/aftersaledetailsactivity_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¥ -100"
            android:textSize="12sp"
            android:textColor="@color/baseRedColor"
            android:gravity="right" />
    </LinearLayout>

    <!--取消说明-->
    <TextView
        android:id="@+id/aftersaledetailsactivity_cancelthat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="您已撤销本次申请，如问题仍未解决，售后保障期内，您可以从新发起售后申请。"
        android:textSize="12sp"
        android:textColor="@color/blackColor24" />

    <!--线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huiColorf0" />

    <!--处理信息-->
    <TextView
        android:id="@+id/aftersaledetailsactivity_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:text="处理信息"
        android:textSize="12sp"
        android:textColor="@color/blackColor0f" />

    <!--商品信息-->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        layout="@layout/item_list_aftersale" />

    <!--线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huiColorf0" />

    <!--原因-->
    <TextView
        android:id="@+id/aftersaledetailsactivity_cause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退货原因："
        android:textSize="10sp"
        android:textColor="@color/huiColor66"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true" />

    <!--金额-->
    <TextView
        android:id="@+id/aftersaledetailsactivity_applyformoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退款金额："
        android:textSize="10sp"
        android:textColor="@color/huiColor66"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true" />

    <!--数量-->
    <TextView
        android:id="@+id/aftersaledetailsactivity_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请数量："
        android:textSize="10sp"
        android:textColor="@color/huiColor66"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true" />

    <!--时间-->
    <TextView
        android:id="@+id/aftersaledetailsactivity_applyfortime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请时间："
        android:textSize="10sp"
        android:textColor="@color/huiColor66"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true" />

    <!--编号-->
    <TextView
        android:id="@+id/aftersaledetailsactivity_odd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退款编号："
        android:textSize="10sp"
        android:textColor="@color/huiColor66"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true" />
</LinearLayout>
