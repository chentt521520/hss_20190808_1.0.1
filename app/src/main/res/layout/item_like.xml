<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bk_hui_02"
    android:orientation="vertical">

    <!--图片-->
    <ImageView
        android:id="@+id/item_like_image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@mipmap/frist_jp_img01" />

    <!--标题-->
    <TextView
        android:id="@+id/item_like_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="@dimen/margin10"
        android:paddingEnd="@dimen/margin10"
        android:singleLine="true"
        android:text="@string/null_text"
        android:textColor="#0f0f0f"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/width5"
        android:layout_marginBottom="@dimen/margin10"
        android:paddingStart="@dimen/margin10"
        android:paddingEnd="@dimen/margin10">
        <!--价格-->
        <TextView
            android:id="@+id/item_like_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/null_text"
            android:textColor="#C22222"
            android:textSize="14sp" />

        <!--说明-->
        <TextView
            android:id="@+id/item_like_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/null_text"
            android:textColor="#737373"
            android:textSize="10sp" />

    </RelativeLayout>

</LinearLayout>
