<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/whiteColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="@dimen/width15">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin10"
            android:src="@mipmap/icon_balance_consume" />

        <TextView
            android:id="@+id/item_balance_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image"
            android:text="@string/null_text"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_balance_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image"
            android:text="@string/null_text"
            android:textColor="#333333"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_card_record_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/null_text"
            android:textColor="#c22222"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/ui_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#e6e6e6" />
</RelativeLayout>