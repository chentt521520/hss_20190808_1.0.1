<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_express_trace_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="1dp">

            <ImageView
                android:id="@+id/item_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height5"
                android:src="@mipmap/red_dot" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height20"
            android:layout_marginStart="@dimen/height10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_express_trace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/height5"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_express_trace_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/height5"
                android:layout_marginTop="7dp"
                android:textColor="#333333"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>