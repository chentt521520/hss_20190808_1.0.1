<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/xq_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edti_text_bg"
            android:gravity="top|left"
            android:hint="请简要描述您的问题和意见，以便我们更好的为你提供帮助"
            android:minLines="10"
            android:paddingBottom="@dimen/padding5"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:paddingTop="@dimen/padding5"
            android:textColorHint="@color/colorhit"
            android:textSize="@dimen/text_font_6" />

        <ImageView
            android:id="@+id/add_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_img"
            android:layout_marginBottom="50dp"
            android:visibility="gone" />

        <com.example.haoss.views.MyGridView
            android:id="@+id/add_img_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:numColumns="5"
            android:verticalSpacing="3dp"
            android:scrollbars="none" />
    </LinearLayout>

    <Button
        android:id="@+id/opin_btn_tijiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:background="@drawable/btn_red_bg"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>