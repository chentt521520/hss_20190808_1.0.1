<?xml version="1.0" encoding="utf-8"?>
<com.example.applibrary.custom.CustomerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huiColorf0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/huiColorf0"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include layout="@layout/include_banner_grid" />

        <include
            layout="@layout/include_brand_recommond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10" />

        <include
            layout="@layout/include_good_favor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10" />

    </LinearLayout>

</com.example.applibrary.custom.CustomerScrollView>
