<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@color/whiteColor">

    <!--全部-->
    <TextView
        android:id="@+id/action_textbutton_all"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="全部"
        android:textColor="@color/baseRedColor"
        android:textSize="15sp"
        android:gravity="center" />

    <!--待付款-->
    <TextView
        android:id="@+id/action_textbutton_staypay"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="待付款"
        android:textColor="@color/huiColor66"
        android:textSize="15sp"
        android:gravity="center" />

    <!--待发货-->
    <TextView
        android:id="@+id/action_textbutton_staysend"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="待发货"
        android:textColor="@color/huiColor66"
        android:textSize="15sp"
        android:gravity="center" />

    <!--待收货-->
    <TextView
        android:id="@+id/action_textbutton_stayrecv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="待收货"
        android:textColor="@color/huiColor66"
        android:textSize="15sp"
        android:gravity="center" />

    <!--已完成-->
    <TextView
        android:id="@+id/action_textbutton_finish"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="已完成"
        android:textColor="@color/huiColor66"
        android:textSize="15sp"
        android:gravity="center" />
</LinearLayout>
