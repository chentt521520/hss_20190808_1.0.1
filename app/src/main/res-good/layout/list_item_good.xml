<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/whiteColor"
    android:orientation="vertical">

    <View style="@style/ui_line" />
    <!--搜索商品item-->
    <LinearLayout
        style="@style/base_padding_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--图片-->
        <ImageView
            android:id="@+id/item_goodssearch_lmage"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/big_image01" />

        <RelativeLayout
            style="@style/padding_top_bottom_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--名称-->
            <TextView
                android:id="@+id/item_good_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_good_type"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="@dimen/margin2"
                android:text="国内"
                android:textColor="@color/whiteColor"
                android:textSize="9sp"
                android:textStyle="bold" />

            <!--名称-->
            <TextView
                android:id="@+id/item_goodssearch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin10"
                android:layout_toEndOf="@+id/item_good_type"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="名称"
                android:textColor="@color/blackColor4d"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!--价格-->
            <TextView
                android:id="@+id/item_goodssearch_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/item_goodssearch_sales"
                android:layout_marginTop="5dp"
                android:text="@string/null_text"
                android:textColor="@color/baseRedColor"
                android:textSize="14sp" />

            <!--销量-->
            <TextView
                android:id="@+id/item_goodssearch_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:text="@string/null_text"
                android:textColor="@color/huiColor66"
                android:textSize="9sp" />

            <!--库存-->
            <TextView
                android:id="@+id/item_goodssearch_repertory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="@string/null_text"
                android:textColor="@color/blackColor33"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
