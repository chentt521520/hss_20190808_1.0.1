<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/whiteColor"
    android:orientation="horizontal">
    <!--商品详情5按钮-->
    <!--3按钮，联系客服、收藏、购物车-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <!--客服-->
        <RelativeLayout
            android:id="@+id/action_button_kefu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/goods_service"
                android:gravity="center"
                android:text="联系客服"
                android:textColor="@color/blackColor0f"
                android:textSize="10dp" />
        </RelativeLayout>

        <!--收藏-->
        <RelativeLayout
            android:id="@+id/action_button_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/action_button_collect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/goods_collect"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/blackColor0f"
                android:textSize="10dp" />
        </RelativeLayout>

        <!--购物车-->
        <RelativeLayout
            android:id="@+id/action_button_car"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/action_goods_button_gwctext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/goods_car"
                android:gravity="center"
                android:text="购物车"
                android:textColor="@color/blackColor0f"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/action_button_car_number"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignEnd="@id/action_goods_button_gwctext"
                android:layout_alignTop="@id/action_goods_button_gwctext"
                android:layout_marginEnd="-5dp"
                android:layout_marginTop="-5dp"
                android:background="@drawable/radiobutton_checked_on"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/whiteColor"
                android:textSize="8sp"
                android:visibility="visible" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/action_button_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/huiColor80"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/whiteColor"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/action_button_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/baseRedColor"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/whiteColor"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>
