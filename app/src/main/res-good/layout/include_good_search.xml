<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_padding_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/page_back"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/height10"
        android:src="@mipmap/page_back" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="@dimen/height20"
        android:layout_marginStart="@dimen/height20"
        android:layout_weight="1"
        android:background="@drawable/bg_hui02"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin10"
        android:paddingStart="@dimen/margin10">

        <!--搜索输入-->
        <EditText
            android:id="@+id/goodslistactivity_input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin10"
            android:layout_marginStart="@dimen/margin10"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入要搜索的商品"
            android:singleLine="true"
            android:textColor="@color/blackColor0f"
            android:imeOptions="actionSearch"
            android:textSize="13sp">

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/goodslistactivity_go"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:padding="@dimen/height5"
            android:src="@mipmap/search_image" />
    </LinearLayout>
</LinearLayout>
