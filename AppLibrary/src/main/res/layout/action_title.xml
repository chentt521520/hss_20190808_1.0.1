<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_title_bg"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/action_title_goback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/title_left_goback" />

    <TextView
        android:id="@+id/action_title_go"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="返回"
        android:textColor="#0f0f0f"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/action_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#0f0f0f"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/action_title_other"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="其他"
        android:textColor="#c22222"
        android:textSize="16sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/action_title_add"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/title_right_dele"
        android:visibility="gone" />
</RelativeLayout>

